{% set flash_bag_messages = app.session.getFlashBag.get(request.get('_route') ~ '_success') %}
{% if flash_bag_messages|length > 0 %}
    <div class="js-block-hider c-flash-bag c-flash-bag--state_success">
        <div class="js-block-hider__close-btn s-admin-icon c-flash-bag__close-btn"></div>
        {% for message in flash_bag_messages %}
            <div class="c-flash-bag__ph">{{ message }}</div>
        {% endfor %}
    </div>
{% endif %}


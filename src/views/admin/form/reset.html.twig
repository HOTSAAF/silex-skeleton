{%- block button_row -%}
    <div class="c-admin-form__btn-row c-admin-form__btn-row--inline">
        {{- form_widget(form) -}}
    </div>
{%- endblock button_row -%}

{%- block reset_widget -%}
    {%- set type = type|default('reset') -%}
    {% set attr = attr|merge({class: 'c-btn c-btn--cancel ' ~ (attr.class is defined ? attr.class : '')}) %}
    {{ block('button_widget') }}
{%- endblock reset_widget -%}

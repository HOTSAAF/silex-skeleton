    #}
    {# {{ form(contact_form, {
        attr: {
            class: 'jsc-contact-form'
        }
    }) }} #}

    {#
        With Ajax call
        Adding `novalidate: ''` to the attr object lets you debug server-side
        validation.
    #}
    <div class="js-contact-form c-contact-form">
        {{ form(contact_form, {
            attr: {
                novalidate: ''
            }
        }) }}
    </div>

{% form_theme contact_form 'form/contact_form.html.twig' %}

{% block head_end %}
    {{ parent() }}
    <script src='https://www.google.com/recaptcha/api.js?hl={{ request.locale }}'></script>
{% endblock %}

{% block content %}
    {# {% include 'partials/home/paralax.html.twig' %} #}
